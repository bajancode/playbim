<% layout('layouts/boilerplate')%>
<div id="cluster-map" class="mb-4"></div>

<h1>All Playgrounds</h1>
<!--Can do this in navbar...maybe bring it back with a searchbar but for now ugly and if add with a button is awkward 
    Also the h1 above is a bit off compared to the below cards, may need to do something with it
    <div>
    <a href="/playgrounds/new" class="">Add Playground</a>
</div> -->
<% for (let playground of playgrounds){%>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <%if(playground.images.length) {%>
            <img class="img-fluid" alt="" src="<%=playground.images[0].url%>">
            <% }else {%>
            <img class="img-fluid" alt="default pic of playground" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS9xZ1xszREarscmThufMHHvCXnWkOAQ9KkQA&usqp=CAU">
            <% } %>

        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= playground.title %> </h5>
                <p class="card-text"><%= playground.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= playground.location%></small>
                </p>
                <a class="btn btn-primary" href="/playgrounds/<%=playground._id%>">View <%=playground.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const playgrounds = {features: <%- JSON.stringify(playgrounds) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
