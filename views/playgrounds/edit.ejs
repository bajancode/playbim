<% layout("layouts/boilerplate")%>
  <div class="row">
      <h1 class="text-center">Edit Playground</h1>
      <div class="col-md-6 offset-md-3">
        <form action="/playgrounds/<%=playground._id%>?_method=PUT" method="POST" novalidate class="validated-form" 
            enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="playground[title]" 
                    value="<%=playground.title %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="playground[location]"
                    value="<%=playground.location %>" required>
                    <div class="valid-feedback">
                        Looks good!
                   </div>
                </div>
            
            <div class="mb-3">
                <label class="form-label" for="price">Playground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="playground[price]"
                        value="<%=playground.price %>" required>
                        <div class="valid-feedback">
                            Looks good!
                       </div>
                    </div>
                <div class="valid-feedback">
                    Looks good!
               </div>
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" 
                name="playground[description]" required><%=playground.description %></textarea>
                <div class="valid-feedback">
                    Looks good!
               </div>
            </div>
            <div class="mb-3">
                <label class="form-label">Add more images</label>
                <div class="form-file custom-file">
                      <input class="form-control custom-file-input" type="file" id="image" name="image" multiple onchange="previewMultiple(event)">
                      <label for="image" class="form-label custom-file-label"></label>
                  </div>
                  <div id="formFile"></div>
              </div>
              <div class="mb-3">
                <% playground.images.forEach(function(img, i) { %>
                <img src="<%=img.url %>" class="img-thumbnail w-50" alt="playground images">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label for="image-<%=i%>">Delete pic?</label>
                <% })%>
            </div>
            <div class="mb-3">
            <button class="btn btn-primary">Update Playground</button>
            <a class="btn btn-outline-primary " href="/playgrounds/<%= playground._id%>">Back to Playground</a>
    
        </div>
        </form>
    
      </div>
  </div>